                      <div
                        key={vendor.id}
                        className="rounded-2xl border border-slate-200/80 bg-white px-4 py-3 text-slate-900 shadow-[0_20px_45px_-35px_rgba(15,23,42,0.18)] dark:border-white/20 dark:bg-white/95 dark:shadow-[0_25px_60px_-50px_rgba(0,0,0,0.85)]"
                      >
                        <div className="flex items-center justify-between">
                          <div>
                            <div className="text-sm font-semibold text-slate-700">
                              {vendorName}
                            </div>
                            <div className="text-[10px] text-slate-400">
                              {vendorEmail}
                            </div>
                          </div>
                          <div
                            className={`text-[10px] font-semibold ${getStatusClasses(
                              vendor.status
                            )}`}
                          >
                            {vendor.status}
                          </div>
                        </div>
                        <div className="mt-3 flex items-center gap-2">
                          <select
                            value={vendorStatusUpdates[vendor.id] || vendor.status || "pending"}
                            onChange={(event) =>
                              setVendorStatusUpdates((prev) => ({
                                ...prev,
                                [vendor.id]: event.target.value,
                              }))
                            }
                            className="flex-1 rounded-lg border border-slate-200 bg-white px-2 py-1 text-xs text-slate-700"
                          >
                            <option value="active">active</option>
                            <option value="pending">pending</option>
                            <option value="inactive">inactive</option>
                            <option value="rejected">rejected</option>
                          </select>
                          <button
                            type="button"
                            onClick={() => handleVendorStatusSave(vendor.id, vendor.status)}
                            className="inline-flex items-center gap-1 rounded-lg bg-slate-900 px-2 py-1 text-[10px] font-semibold text-white"
                          >
                            Update
                          </button>
                        </div>
                      </div>
                    );
                  })}
                </div>
              )}
              {vendors.length > 6 && (
                <button
                  type="button"
                  onClick={() => setShowAllVendors((prev) => !prev)}
                  className="text-[10px] font-semibold text-slate-600 dark:text-slate-300"
                >
                  {showAllVendors ? "Show less" : "View all"}
                </button>
              )}
              {vendorActionStatus && (
                <div className="text-xs text-emerald-600 font-semibold">{vendorActionStatus}</div>
              )}
              {vendorActionError && (
                <div className="text-xs text-rose-600 font-semibold">{vendorActionError}</div>
              )}
            </section>

            <section
              id="transactions"
              className="space-y-4 animate-in fade-in slide-in-from-bottom-2"
            >
              <div className="flex items-center justify-between">
                <div>
                  <h2 className="text-xl font-admin-heading font-semibold text-slate-900 dark:text-white">
                    System transactions
                  </h2>
