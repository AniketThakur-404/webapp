                          <div className="flex items-center justify-between">
                            <div>
                              <div className="text-sm font-semibold text-slate-700">
                                {withdrawal.PayoutMethod?.value ||
                                  withdrawal.payoutMethod?.value ||
                                  "UPI payout"}
                              </div>
                              <div className="text-[10px] text-slate-400">
                                {withdrawal.id?.slice(0, 10)} - {formatDate(withdrawal.createdAt)}
                              </div>
                            </div>
                            <div className="text-right">
                              <div className="text-sm font-semibold text-slate-900">
                                INR {formatAmount(withdrawal.amount)}
                              </div>
                              <div
                                className={`text-[10px] font-semibold ${getStatusClasses(
                                  withdrawal.status
                                )}`}
                              >
                                {withdrawal.status}
                              </div>
                            </div>
                          </div>
                          <button
                            type="button"
                            onClick={() =>
                              setWithdrawalAction((prev) => ({
                                ...prev,
                                id: withdrawal.id,
                              }))
