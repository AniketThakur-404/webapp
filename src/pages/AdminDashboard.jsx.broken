                <button
                  type="button"
                  onClick={() => setShowAllUsers((prev) => !prev)}
                  className="text-[10px] font-semibold text-slate-600 dark:text-slate-300"
                >
                  {showAllUsers ? "Show less" : "View all"}
                </button>
              )}
              {userActionStatus && (
                <div className="text-xs text-emerald-600 font-semibold">{userActionStatus}</div>
              )}
              {userActionError && (
                <div className="text-xs text-rose-600 font-semibold">{userActionError}</div>
              )}
