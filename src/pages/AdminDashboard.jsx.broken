                  <RefreshCw size={12} />
                  Refresh
                </button>
              </div>
              {isLoadingTransactions && (
                <div className="text-xs text-slate-500 dark:text-slate-400">Loading...</div>
              )}
              {transactionsError && (
                <div className="text-xs text-rose-600 font-semibold">{transactionsError}</div>
              )}
              {limitedTransactions.length === 0 && !isLoadingTransactions ? (
                <div className="text-xs text-slate-500 dark:text-slate-400">
                  No transactions available.
                </div>
              ) : (
                <div className="grid gap-3 md:grid-cols-2">
                  {limitedTransactions.map((tx) => (
                    <div
                      key={tx.id}
                      className="rounded-2xl border border-slate-200/80 bg-white px-4 py-3 text-slate-900 shadow-[0_20px_45px_-35px_rgba(15,23,42,0.18)] dark:border-white/20 dark:bg-white/95 dark:shadow-[0_25px_60px_-50px_rgba(0,0,0,0.85)]"
                    >
                      <div className="flex items-center justify-between">
                        <div>
                          <div className="text-sm font-semibold text-slate-700">
                            {tx.category?.replace(/_/g, " ") || "Transaction"}
                          </div>
                          <div className="text-[10px] text-slate-400">
                            {formatDate(tx.createdAt)}
                          </div>
                        </div>
                        <div className="text-right">
                          <div className="text-sm font-semibold text-slate-900">
                            {tx.type === "debit" ? "-" : "+"}INR {formatAmount(tx.amount)}
                          </div>
                          <div
                            className={`text-[10px] font-semibold ${getStatusClasses(tx.status)}`}
                          >
                            {tx.status}
                          </div>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              )}
              {transactions.length > 8 && (
                <button
                  type="button"
                  onClick={() => setShowAllTransactions((prev) => !prev)}
                  className="text-[10px] font-semibold text-slate-600 dark:text-slate-300"
                >
                  {showAllTransactions ? "Show less" : "View all"}
                </button>
              )}
            </section>

            <section id="qrs" className="space-y-4 animate-in fade-in slide-in-from-bottom-2">
              <div className="flex items-center justify-between">
                <div>
                  <h2 className="text-xl font-admin-heading font-semibold text-slate-900 dark:text-white">
                    Global QR registry
                  </h2>
                  <p className="text-sm text-slate-600 dark:text-slate-400">
                    Track generated QR codes across all campaigns.
                  </p>
                </div>
                <button
                  type="button"
                  onClick={() => loadQrs(token)}
                  className="flex items-center gap-1 text-xs font-semibold text-slate-500 dark:text-slate-400"
                >
                  <RefreshCw size={12} />
                  Refresh
                </button>
              </div>
              {isLoadingQrs && (
                <div className="text-xs text-slate-500 dark:text-slate-400">Loading...</div>
              )}
              {qrsError && <div className="text-xs text-rose-600 font-semibold">{qrsError}</div>}
              {limitedQrs.length === 0 && !isLoadingQrs ? (
                <div className="text-xs text-slate-500 dark:text-slate-400">No QR codes yet.</div>
              ) : (
                <div className="grid gap-3 md:grid-cols-2">
                  {limitedQrs.map((qr) => (
                    <div
                      key={qr.id}
                      className="rounded-2xl border border-slate-200/80 bg-white px-4 py-3 text-slate-900 shadow-[0_20px_45px_-35px_rgba(15,23,42,0.18)] dark:border-white/20 dark:bg-white/95 dark:shadow-[0_25px_60px_-50px_rgba(0,0,0,0.85)]"
                    >
                      <div className="flex items-center justify-between">
                        <div>
                          <div className="text-sm font-semibold text-slate-700">
                            {qr.uniqueHash?.slice(0, 12)}...
                          </div>
                          <div className="text-[10px] text-slate-400">
                            {formatDate(qr.createdAt)}
                          </div>
                        </div>
                        <div
                          className={`text-[10px] font-semibold ${getStatusClasses(qr.status)}`}
                        >
                          {qr.status}
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              )}
              {qrs.length > 8 && (
                <button
                  type="button"
                  onClick={() => setShowAllQrs((prev) => !prev)}
                  className="text-[10px] font-semibold text-slate-600 dark:text-slate-300"
                >
                  {showAllQrs ? "Show less" : "View all"}
                </button>
              )}
            </section>
          </div >
        </main >
      </div >
    </div >
  );
};

export default AdminDashboard;



