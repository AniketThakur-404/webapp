                  <RefreshCw size={12} />
                  Refresh
                </button>
              </div>
              {isLoadingUsers && (
                <div className="text-xs text-slate-500 dark:text-slate-400">Loading...</div>
              )}
              {usersError && <div className="text-xs text-rose-600 font-semibold">{usersError}</div>}
              {limitedUsers.length === 0 && !isLoadingUsers ? (
                <div className="text-xs text-slate-500 dark:text-slate-400">No users found.</div>
              ) : (
                <div className="grid gap-3 md:grid-cols-2">
                  {limitedUsers.map((user) => {
                    const displayName = user.name || user.email || user.phoneNumber || "Customer";
                    return (
                      <div
                        key={user.id}
                        className="rounded-2xl border border-slate-200/80 bg-white px-4 py-3 text-slate-900 shadow-[0_20px_45px_-35px_rgba(15,23,42,0.18)] dark:border-white/20 dark:bg-white/95 dark:shadow-[0_25px_60px_-50px_rgba(0,0,0,0.85)]"
